<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
    <div class="card">
    <h1>To-Do List</h1>

    <form action="/addtask" method="POST">
        <input type="text" name="newtask" required>
        <button type="submit" class="blue-action">Add Task</button>
    </form>
    </div>

    <div class="card">
    <h2>Tasks</h2>
    <form action="/removetask" method="POST">
        <ul>
            <% task.forEach(function(taskItem) { %>
                <li>
                    <input type="checkbox" name="check" value="<%= taskItem %>">
                    <%= taskItem %>
                </li>
            <% }); %>
        </ul>
        <button type="submit" class="red-button">Remove Completed Tasks</button>
    </form>
    </div>

    <div class="card">
    <h2>Completed Tasks</h2>
    <ul>
        <% complete.forEach(function(completeItem) { %>
            <li><%= completeItem %></li>
        <% }); %>
    </ul>
    <div>

</body>
</html>
